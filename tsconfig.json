{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "rootDir": "src",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "es2017"
    ],
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}